<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.org.carona.caronasolidaria.controller.AdicionarCaronaActivity"
    android:orientation="vertical">
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Adicione o endereço do ponto de encontro"
        android:id="@+id/adicionar_carona_ponto_inicial_et"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horário de partida"/>
    <Spinner
        android:id="@+id/adicionar_carona_horario_partida_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/horas"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horário de retorno"/>
    <Spinner
        android:id="@+id/adicionar_carona_horario_retorno_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/horas"/>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="right|end">
    <Button
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@color/holo_blue_dark"
        android:text="CADASTRAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

</LinearLayout>
